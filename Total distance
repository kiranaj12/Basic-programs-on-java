import java.lang.Math;

public class Program
{
    public static void main(String[] args) {
        int a[]= {1,5,8,2,7};
        int d;
        int sum=0;
        int ength=a.length;
		for(int i=0;i<ength-1;i++)
        {
            d= Math.abs(a[i]-a[i+1]);
            sum+=d;
        }
        System.out.println("total distance :"+sum);
	}
}
